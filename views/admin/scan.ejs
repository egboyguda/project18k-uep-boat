<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/qr.css">
<div class="space"></div>
<div class="row centered justify-content-md-center col-6 offset-3">
    
 
    <p class="text-center" id="p"></p>
    <div  id="reader">
    </div>
</div>

<div class="text-center">
  <button class="btn btn-success mt-5" onclick="doneScan()">Done</button>
</div>
<script src="/js/html5-qrcode.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>


<script>
    async function onScanSuccess(qrCodeMessage) {
  // handle on success condition with the decoded message
  //onScanSuccess = await noop;
  html5QrcodeScanner.clear();
  axios.post('/dash/<%= trip%>/scan',{
    person:qrCodeMessage
  })
  .then(function (res) {
    //p.innerHTML = res.data;
    alert(`successfuly scan ${res.data}`);
    window.location.replace("https://passenger-record-system.herokuapp.com/dash/<%=trip%>/scan");
    
    
  });
}

var html5QrcodeScanner = new Html5QrcodeScanner('reader', {
  fps: 10,
  qrbox: 250,
});

html5QrcodeScanner.render(onScanSuccess);


function doneScan(){
  axios.post('/<%=trip%>/done',{

  }).then(()=>{
    window.location.replace('https://passenger-record-system.herokuapp.com/dash')
  })

}
</script>