<div class="row mt-5">
    <h1 class="text-center">REGISTER ESTABLISHMENT</h1>
    <div class="col-6 offset-3">
      <form action="/admin/establishment/add" method="post" novalidate class="validated-form mt-3">
          <div class="mb-3">
              <label class='form-label' for="name">Establisment name:</label>
              <input class='form-control' type="text" name="name" id="name" required>
              <div class="valid-feedback">Looks Good</div>
          </div>
          <div class="mb-3">
            <label class='form-label' for="username">Username:</label>
            <input class='form-control' type="text" username="username" id="username" name="username" required>
            <div class="valid-feedback">Looks Good</div>
        </div>

          <div class="mb-3">
              <label class='form-label' for="password">Password:</label>
              <input class='form-control' type="password" name="password" id="password" required>
              <div class="valid-feedback">Looks Good</div>
          </div>
          <div class="mb-3">
              <input class="btn btn-success" type="submit" value="REGISTER">
          </div>
          </form>

    </div>
</div>